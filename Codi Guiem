
import requests
from bs4 import BeautifulSoup
import pandas as pd

page = requests.get("https://www.amazon.es/gp/new-releases/hpc/ref=zg_bsnr_nav_0")

soup = BeautifulSoup(page.content, 'html.parser')
li = soup.li
info = li.find()
link = info.a.get("href")
nom = (info.a.div.find_next("div").text)
estrella = (info.i.text)
id = info.div.div.text
reviews = info.find_all("a")[2].text
preus = info.find("span", class_="p13n-sc-price").text
